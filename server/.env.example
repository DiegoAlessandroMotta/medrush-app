APP_NAME="Med Rush"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:4000

SERVER_HOST=localhost
SERVER_PORT=4000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mariadb
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=medrush_db
DB_USERNAME=medrush
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

DISPLAY_ROLE_PERMISSION_EXCEPTION=true

ADMIN_MAIL=admin@example.com
ADMIN_PASSWORD=password

FIREBASE_CREDENTIALS=storage/app/firebase-auth.json

# Ruta al JSON de la cuenta de servicio (local). En Docker/producción puede dejarse igual si usas GOOGLE_ROUTE_OPTIMIZATION_CREDENTIALS_JSON.
GOOGLE_ROUTE_OPTIMIZATION_CREDENTIALS=storage/services/google/service-account.json
GOOGLE_ROUTE_OPTIMIZATION_PROJECT_ID=

# Producción/Docker (Opción A): genera base64 del JSON y pégalo aquí. Ver instrucciones abajo.
# - Windows PowerShell: [Convert]::ToBase64String([IO.File]::ReadAllBytes("storage/services/google/service-account.json"))
# - Linux/Mac: base64 -w0 storage/services/google/service-account.json
# GOOGLE_ROUTE_OPTIMIZATION_CREDENTIALS_JSON=

# Google Maps API Key (Geocoding, Directions, Maps). Misma clave para todos.
GOOGLE_MAPS_API_KEY=
GOOGLE_GEOCODING_API_KEY=
GOOGLE_DIRECTIONS_API_KEY=

# Laravel Reverb
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=medrush_app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=0.0.0.0
REVERB_PORT=9000
REVERB_SCHEME=http
REVERB_PUBLIC_HOST=
REVERB_PUBLIC_PORT=
